---
import MainLayout from '../../layouts/MainLayout.astro';
import { supabase } from '../../lib/supabase'; // Pastikan path ini bener

// AMBIL DATA DARI DATABASE
const { data: posts, error } = await supabase
  .from('blogs')
  .select('*')
  .order('created_at', { ascending: false });

if (error) {
  console.error("Gagal ambil blog:", error.message);
}

const categories = ["Tech", "Cybersecurity", "University", "Personal"];
---

<MainLayout title="Blog | Fiqro Najiah">
  <section class="max-w-6xl mx-auto text-white relative z-10">
    <div class="mb-5">
      <h1 class="text-3xl font-bold tracking-tight font-josefin">Blog</h1>
      <p class="text-slate-500 text-[10px] font-mono uppercase tracking-[0.3em]">Thoughts, Stories, and Documentation.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-10 items-start">
      
      <aside class="space-y-8 lg:sticky lg:top-24">
        <div class="relative group">
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          <input type="text" id="blogSearch" placeholder="Search posts..." class="w-full bg-white/5 border border-white/10 rounded-xl py-2 pl-9 pr-3 text-[11px] focus:outline-none focus:border-blue-500/50 transition-all">
        </div>

        <div>
          <h4 class="text-[9px] font-mono font-bold text-slate-500 uppercase tracking-[0.2em] mb-4">Categories</h4>
          <div class="flex flex-wrap lg:flex-col gap-1.5">
            {categories.map(cat => (
              <label class="flex items-center gap-3 group cursor-pointer p-2 rounded-lg hover:bg-white/5 transition-all border border-transparent hover:border-white/5 w-fit lg:w-full">
                <input type="checkbox" value={cat} class="category-checkbox w-3.5 h-3.5 rounded border-white/20 bg-black text-blue-500 focus:ring-0">
                <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors uppercase tracking-wider">{cat}</span>
              </label>
            ))}
          </div>
        </div>
      </aside>

      <div class="lg:col-span-3 space-y-4">
        <div class="flex justify-between items-center mb-6 border-b border-white/5 pb-3">
          <span class="text-[9px] font-mono text-slate-600 uppercase tracking-widest">
            Showing <span id="postCount">{posts?.length || 0}</span> of {posts?.length || 0} Articles
          </span>
          <button id="blogSortBtn" data-order="asc" class="text-[9px] font-mono text-slate-600 uppercase flex items-center gap-1 hover:text-white transition-colors">
            Ascending <span id="blogSortArrow">↑</span>
          </button>
        </div>

        <div id="blogList" class="grid grid-cols-1 gap-6">
          {posts?.map((post) => (
            <div class="blog-card" data-title={post.title} data-category={post.category}>
              <a href={`/blogs/${post.slug}`} class="group flex flex-col md:flex-row gap-6 border border-white/5 rounded-2xl bg-black/40 backdrop-blur-md p-4 hover:border-white/20 hover:bg-white/[0.02] transition-all duration-300 relative overflow-hidden">
                
                <div class="w-full md:w-48 h-32 shrink-0 overflow-hidden rounded-xl border border-white/5">
                  <img 
                    src={post.image_url || post.image} 
                    alt={post.title} 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    onerror="this.src='https://placehold.co/400x300/1a1a1a/666666?text=Blog+Post'"
                  />
                </div>

                <div class="flex flex-col justify-center flex-1 pr-4">
                  <div class="flex justify-between items-center mb-2">
                    <div class="flex items-center gap-3">
                      <span class="text-[8px] font-mono text-slate-500 uppercase tracking-widest">{post.date}</span>
                      <span class="text-[8px] text-slate-700">•</span>
                      <span class="text-[8px] font-mono text-slate-500 uppercase tracking-widest">{post.reading_time || post.readingTime}</span>
                    </div>
                    <span class="px-2 py-0.5 bg-blue-500/5 border border-blue-500/20 rounded text-[7px] font-mono text-blue-400 uppercase tracking-tighter">
                      {post.category}
                    </span>
                  </div>
                  
                  <h3 class="text-xl font-bold group-hover:text-blue-400 transition-colors font-josefin uppercase leading-tight tracking-tight mb-2">
                    {post.title}
                  </h3>
                  <p class="text-slate-500 text-[11px] leading-relaxed line-clamp-2 font-light italic">
                    "{post.description}"
                  </p>
                </div>

                <div class="absolute right-6 top-1/2 -translate-y-1/2 hidden md:block opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all">
                   <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5l7 7-7 7" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>

    </div>
  </section>

  <script>
    const sortBtn = document.getElementById('blogSortBtn');
    const sortArrow = document.getElementById('blogSortArrow');
    const blogList = document.getElementById('blogList');
    const blogCards = Array.from(document.querySelectorAll('.blog-card')) as HTMLElement[];
    const searchInput = document.getElementById('blogSearch') as HTMLInputElement;
    const postCount = document.getElementById('postCount');

    // Sort Logic
    sortBtn?.addEventListener('click', () => {
      const currentOrder = sortBtn.getAttribute('data-order');
      const newOrder = currentOrder === 'asc' ? 'desc' : 'asc';
      
      sortBtn.setAttribute('data-order', newOrder);
      sortBtn.childNodes[0].textContent = newOrder === 'asc' ? 'Ascending ' : 'Descending ';
      if (sortArrow) sortArrow.textContent = newOrder === 'asc' ? '↑' : '↓';

      const sortedCards = blogCards.sort((a, b) => {
        const titleA = a.getAttribute('data-title')?.toLowerCase() || "";
        const titleB = b.getAttribute('data-title')?.toLowerCase() || "";
        return newOrder === 'asc' 
          ? titleA.localeCompare(titleB) 
          : titleB.localeCompare(titleA);
      });

      if (blogList) {
        blogList.innerHTML = '';
        sortedCards.forEach(card => blogList.appendChild(card));
      }
    });

    // Search Logic
    searchInput?.addEventListener('input', (e) => {
      const term = (e.target as HTMLInputElement).value.toLowerCase();
      let visibleCount = 0;

      blogCards.forEach(card => {
        const title = card.getAttribute('data-title')?.toLowerCase() || "";
        const isVisible = title.includes(term);
        card.style.display = isVisible ? 'block' : 'none';
        if (isVisible) visibleCount++;
      });

      if (postCount) postCount.textContent = visibleCount.toString();
    });
  </script>
</MainLayout>