---
import MainLayout from '../../layouts/MainLayout.astro';
import { supabase } from '../../lib/supabase';

// AMBIL DATA DARI DATABASE
const { data: projects, error } = await supabase
  .from('projects')
  .select('*')
  .order('created_at', { ascending: false });

if (error) {
  console.error("Gagal ambil projects:", error.message);
}

// Ambil tags unik dari database (opsional) atau biarkan manual
const allTags = ["Astro", "Laravel", "React", "NextJS", "Tailwind", "Supabase", "PHP", "IoT"];
---

<MainLayout title="Projects | Fiqro Najiah">
  <section class="max-w-6xl mx-auto text-white relative z-10">
    <div class="mb-6">
      <h1 class="text-3xl font-bold tracking-tight font-josefin">Projects</h1>
      <p class="text-slate-500 text-[10px] font-mono uppercase tracking-widest">Recent works.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 items-start">
      <aside class="space-y-6 lg:sticky lg:top-20">
        <div class="relative group">
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          <input type="text" id="searchInput" placeholder="Search..." class="w-full bg-white/5 border border-white/10 rounded-lg py-1.5 pl-9 pr-3 text-[11px] focus:outline-none focus:border-blue-500/50 transition-all">
        </div>

        <div>
          <h4 class="text-[9px] font-mono font-bold text-slate-500 uppercase tracking-[0.2em] mb-3">Tags</h4>
          <div class="flex flex-wrap lg:flex-col gap-1">
            {allTags.map(tag => (
              <label class="flex items-center gap-2 group cursor-pointer p-1.5 rounded-md hover:bg-white/5 transition-all w-fit lg:w-full">
                <input type="checkbox" value={tag} class="tag-checkbox w-3.5 h-3.5 rounded border-white/20 bg-black text-blue-500 focus:ring-0">
                <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors uppercase">{tag}</span>
              </label>
            ))}
          </div>
        </div>
      </aside>

      <div class="lg:col-span-3 space-y-4">
        <div class="flex justify-between items-center mb-6 border-b border-white/5 pb-3">
          <span class="text-[9px] font-mono text-slate-600 uppercase tracking-widest">
            Showing <span id="projectCount">{projects?.length || 0}</span> Projects
          </span>
          <button id="sortBtn" data-order="asc" class="text-[9px] font-mono text-slate-600 uppercase flex items-center gap-1 hover:text-white transition-colors">
            Ascending <span id="sortArrow">↑</span>
          </button>
        </div>

        <div id="projectList" class="grid grid-cols-1 gap-4">
          {projects?.map((project) => (
            <div class="project-card" data-title={project.title} data-tags={project.tags?.join(',')}>
              <a href={`/projects/${project.slug}`} class="group flex flex-col md:flex-row border border-white/5 rounded-xl bg-black/20 backdrop-blur-sm overflow-hidden transition-all duration-300">
                <div class="md:w-[180px] aspect-video md:aspect-auto overflow-hidden bg-white/5 border-b md:border-b-0 md:border-r border-white/5">
                  <img src={project.image_url} class="w-full h-full object-cover transition-all duration-500" onerror="this.src='/projects/default.png'" />
                </div>
        
                <div class="flex-1 p-4 md:p-5 flex flex-col justify-center">
                  <div class="flex justify-between items-center">
                    <span class="text-[8px] font-mono text-slate-600 uppercase tracking-widest">{project.date}</span>
                    <svg class="w-3 h-3 text-slate-600 group-hover:text-white transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5l7 7-7 7"></path></svg>
                  </div>
                  <h3 class="text-lg font-bold mt-1 group-hover:text-blue-400 transition-colors font-josefin leading-tight">{project.title}</h3>
                  <p class="text-slate-500 text-[11px] mt-1 leading-snug line-clamp-1 italic">"{project.description}"</p>
                  <div class="grid grid-cols-3 sm:grid-cols-4 md:flex md:flex-wrap gap-1.5 mt-3">
                    {project.tags?.map(tag => (
                      <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-[7px] font-mono text-slate-400 uppercase tracking-tighter text-center group-hover:text-white transition-all">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <script>
    // Logic Sort & Search Tetap Sama Kayak Kode Lu
    const sortBtn = document.getElementById('sortBtn');
    const sortArrow = document.getElementById('sortArrow');
    const projectList = document.getElementById('projectList');
    const projectCards = Array.from(document.querySelectorAll('.project-card')) as HTMLElement[];

    sortBtn?.addEventListener('click', () => {
      const currentOrder = sortBtn.getAttribute('data-order');
      const newOrder = currentOrder === 'asc' ? 'desc' : 'asc';
      sortBtn.setAttribute('data-order', newOrder);
      sortBtn.childNodes[0].textContent = newOrder === 'asc' ? 'Ascending ' : 'Descending ';
      if (sortArrow) sortArrow.textContent = newOrder === 'asc' ? '↑' : '↓';

      const sortedCards = projectCards.sort((a, b) => {
        const titleA = a.getAttribute('data-title')?.toLowerCase() || "";
        const titleB = b.getAttribute('data-title')?.toLowerCase() || "";
        return newOrder === 'asc' ? titleA.localeCompare(titleB) : titleB.localeCompare(titleA);
      });

      if (projectList) {
        projectList.innerHTML = '';
        sortedCards.forEach(card => projectList.appendChild(card));
      }
    });

    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    searchInput?.addEventListener('input', (e) => {
      const term = (e.target as HTMLInputElement).value.toLowerCase();
      projectCards.forEach(card => {
        const title = card.getAttribute('data-title')?.toLowerCase() || "";
        card.style.display = title.includes(term) ? 'block' : 'none';
      });
    });
  </script>
</MainLayout>